<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BovStick"
             x:Class="BovStick.MainPage"
             Title="BovStick" >

    <StackLayout Spacing="50">
        <Label HorizontalTextAlignment="Center" Text="BovStick"  Font="60" TextColor="MediumSeaGreen" FontAttributes="Bold"/>
        <Image Source="farm2.png" HorizontalOptions="Center" Aspect="AspectFit" VerticalOptions="FillAndExpand" />
        <StackLayout VerticalOptions="Center" HorizontalOptions="Fill" Spacing="10" Margin="10">
            <Button x:Name="BtnPasto" Text="Pasto" BackgroundColor="MediumSeaGreen" TextColor="White" HeightRequest="60"/>
            <Button Text="Sicronizar com a pistola" BackgroundColor="MediumSeaGreen" TextColor="White" HeightRequest="60"/>
            <Button Text="Buscar Bovino" BackgroundColor="MediumSeaGreen" TextColor="White" HeightRequest="60"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
